{% extends 'base.html.twig' %}


{% block body %}

<h2> Vous souhaitez me contacter ?</h2>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% if not form.vars.valid %}
    <div class="alert alert-danger">
        Le formulaire de contact n'est pas conforme, merci de revoir les champs incomplets 
    </div>
{% endif %}

<div class="container mb-4 mt-4">
    <div id="contactForm">
        <div class="form-group">
        {{ form_start(form) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}
        <button class="btn btn-primary"> Envoyer votre message
        </button>
        {{ form_end(form) }}
        </div>
    </div>
</div>


{% endblock %}
