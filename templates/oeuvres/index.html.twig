{% extends 'base.html.twig' %}
{# Template all artworks #}
{% block title 'Toutes les oeuvres' %}

{% block body %}

<div class="container text-center">
    <h2 class="mt-5 mb-5">- GALERIE -</h2>
</div>

<section class="oeuvres">
    <div class="album py-5">
        <div class="container col-xl-12">
            <div class="row">
            {% for oeuvres in oeuvres %}
                <div class="row justify-content-center mb-3 col-12 col-md-6 col-xl-3">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body text-center card-oeuvre">
                                <h4 class="text-center card-galerie-titre"> {{ oeuvres.nom }} </h4>
                                <img class="img-galerie" src="{{ asset('build/images/' ~ oeuvres.image) }}" alt="{{ oeuvres.nom }}" width="400" class="img-card"/>
                                <p class="card-text col-12 text-center text-justify"> {{ oeuvres.description }} </p>
                                <p class="card-text text-center text-justify"> Oeuvre cr√©e le : {{ oeuvres.datecreation | date('d/m/Y') }} </p>
                            </div>
                        </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</section>

{% endblock %}
