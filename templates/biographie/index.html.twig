{% extends 'base.html.twig' %}

{% block title 'Biographie' %}

{% block body %}


<div class="col-12 mb-5 mt-5 offset-md-1 col-md-10 biographie-card">
    <h2 class="text-center mb-3">- DEMARCHE ARTISTIQUE -</h2>
        <div class="container text-center">
            <img class="img-artiste img-fluid" alt="sergebequet" src="{{ asset('build/images/sergebequet.jpg') }}" />
        </div>
    {% for artiste in artiste %}
        <div class="card-body">
            <h4 class="card-title">{{ artiste.prenom }} {{ artiste.nom }} </h4>
            <h5 class="card-title">  né le : {{ artiste.datenaissance |date("d/m/y") }} </h5>
            <p class="card-text text-justify"> {{ artiste.biographie }} </p>
        </div>
    {% endfor %}
</div>

<div class="experience-card pt-1">
    <h2 class="text-center mt-5 mb-3 card-title-experience">- EXPERIENCES -</h2>
    {% for experience in experience %}
        <div class="card-body col-12 offset-md-2 col-md-8">
            <h4 class="card-title-experience text-center">{{ experience.titre }}  </h4>
            <h5 class="card-title card-text-experience text-center"> début le : {{ experience.date |date("d/m/y") }} </h5>
            <p class="card-text-experience text-center"> {{ experience.description }} </p>
        </div>
    {% endfor %}
</div>

<div class="recompense-card mt-5">
    <h2 class="text-center mb-5">- RECOMPENSES -</h2>
    <div class="container offset-xl-1 col-xl-10">
        <div class="row">
            {% for recompense in recompense %}
                <div class="row card mb-4 col-12 offset-md-2 col-md-4 col-xl-3">
                    <h5 class="card-header">{{ recompense.nom }}</h5>
                    <div class="card-body">
                        <p class="card-text">{{ recompense.description }}</p>
                        <p> Obtenu le : {{ recompense.dateobtention |date("d/m/y") }}</p>
                        <p> Lieu : {{ recompense.lieu }} </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
