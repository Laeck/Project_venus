{% extends 'base.html.twig' %}

{% block title 'Serge BEQUET artiste sculpteur' %}

{% block body %}
    <div class="container txt-center">
            <h1> Galerie {{ categories.nom }} </h1>
    </div>


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {% for categorie in categories %}
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <img src="{{ asset('build/images/venus.jpeg' ~ categorie.image) }}" alt="{{ categorie.nom }}" width="400" />
                    <div class="card-body">
                    <h4> {{ categorie.nom }} </h4>
                    <p class="card-text"> {{ categorie.description }} </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                        <a href="{{ path('categorie', {'id': categorie.id }) }}"> Accédez à la galerie {{ categorie.nom }}</a>
                        </div>
                    </div>
                    </div>
                </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>



{% endblock %}

